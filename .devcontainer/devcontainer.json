{
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  },
  "mounts": [
    "type=bind,source=${localWorkspaceFolder}/.devcontainer/.bash_history,target=/home/vscode/.bash_history"
  ],
  "postCreateCommand": "scripts/setup"
}
